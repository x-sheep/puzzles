<UserControl
    x:Class="PuzzleModern.UWP.PuzzleKeyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.micsrosoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="100">

    <Grid>
        <Grid x:Name="MainGrid" PointerMoved="MainGrid_PointerMoved" PointerPressed="MainGrid_PointerPressed" PointerReleased="MainGrid_PointerReleased" PointerExited="MainGrid_PointerExited">
        </Grid>
        <Canvas>
            <Border x:Name="HighlightedBorder" BorderThickness="2" Visibility="Collapsed" BorderBrush="Black">
                <TextBlock x:Name="HighlightedText" Text="" FontSize="24" Padding="10,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
